{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Request Rate (req/min)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(count_over_time({service=\"sitetakip-backend\"} | json | level=\"info\" | message=\"request\" [1m]))",
          "legendFormat": "Requests/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        }
      }
    },
    {
      "title": "Error Rate (errors/min)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(count_over_time({service=\"sitetakip-backend\"} | json | level=\"error\" [1m]))",
          "legendFormat": "Errors/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" },
          "custom": { "fillOpacity": 30, "lineWidth": 2 }
        }
      }
    },
    {
      "title": "Response Time (p95 ms)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "quantile_over_time(0.95, {service=\"sitetakip-backend\"} | json | message=\"request\" | unwrap duration_ms [5m]) by ()",
          "legendFormat": "p95 latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": { "fixedColor": "orange", "mode": "fixed" },
          "custom": { "fillOpacity": 15, "lineWidth": 2 }
        }
      }
    },
    {
      "title": "Status Code Distribution",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum by (status) (count_over_time({service=\"sitetakip-backend\"} | json | message=\"request\" [1h]))",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "title": "Top Endpoints by Request Count",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "topk(10, sum by (path) (count_over_time({service=\"sitetakip-backend\"} | json | message=\"request\" [1h])))",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "title": "Recent Errors",
      "type": "logs",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{service=\"sitetakip-backend\"} | json | level=\"error\""
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["sitetakip", "backend"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "SiteTakip Backend",
